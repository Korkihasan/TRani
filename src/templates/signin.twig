{% extends 'layouts/master.twig' %} {% set pageName = " index " %} {% set pageTitle = "signin" %} {% block content %}

<div class="featured-section">









    <div class="top-banner">
        <h1>Signin</h1>
        <p>Welcome to the official Anime blog.</p>
    </div>

    <div class="container">
        <div class="login">
            <div class="login-registration mb-5">
                <div class="row justify-content-center ">
                    <div class="col-lg-4 d-flex justify-content-center mt-5">
                        <form>
                            <h3 class="mb-4">Sign Up</h3>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-envelope"
                                        aria-hidden="true"></i>
                                </span>
                                <input type="email" class="form-control" placeholder="Email adress"
                                    aria-label="Username" aria-describedby="basic-addon1">
                            </div>
                            <div class="input-group mb-3">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-lock"
                                        aria-hidden="true"></i></span>
                                <input type="text" class="form-control" placeholder="Your Name" aria-label="Username"
                                    aria-describedby="basic-addon1">
                            </div>
                            <div class="input-group mb-3 ">
                                <span class="input-group-text" id="basic-addon1"><i class="fa fa-lock"
                                        aria-hidden="true"></i></span>
                                <input type="password" class="form-control" placeholder="Password" aria-label="Username"
                                    aria-describedby="basic-addon1">
                            </div>
                            <button class="btn">Login Now</button>
                            <p class="mt-2">Already have an account?<a class="already-account-link"
                                    href="login.html">Log in!</a></p>

                        </form>
                    </div>

                    <div class="col-1 login-signin-destop-line mx-5">
                    </div>

                    <div class="col-lg-4 mt-5">
                        <div class="row align-items-center flex-column">
                            <div class="col signin-middler">
                                <div class="signin-middler-helper mb-4">
                                    <h3>Login With:</h3>
                                </div>

                            </div>
                            <div class="col d-flex justify-content-center">
                                <button class="btn login-with login-facebook">
                                    <i class="fa fa-facebook" aria-hidden="true"></i>
                                    Sign in With Facebook
                                </button>
                            </div>
                            <div class="col d-flex justify-content-center">
                                <button class="btn login-with login-google">
                                    <i class="fa fa-google" aria-hidden="true"></i>
                                    Sign in With Facebook
                                </button>
                            </div>
                            <div class="col d-flex justify-content-center">
                                <button class="btn login-with login-twitter">
                                    <i class="fa fa-twitter" aria-hidden="true"></i>
                                    Sign in With Facebook
                                </button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>










        </div>
    </div>

</div>
{% endblock %}